<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark_new"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Tony Stark"
        android:textStyle="bold"
        android:textColor="#fdd835"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageTonyStark"/>
    <TextView
        android:id="@+id/textEmail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="tony@starkindustries.com"
        android:layout_toRightOf="@id/imageTonyStark"
        android:layout_below="@+id/textName"
        android:textColor="#fdd835"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/textPhoneNumber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="+11 1115 3333"
        android:layout_toRightOf="@id/imageTonyStark"
        android:layout_below="@id/textEmail"
        android:textColor="#fdd835"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/buttonPanelMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:background="#1565c0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@id/imageTonyStark"
        android:layout_margin="15dp"/>
    <Button
        android:id="@+id/buttonPanelExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT THE APP"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#ff1744"
        />

</RelativeLayout>